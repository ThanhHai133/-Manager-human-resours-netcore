@{
}
@model List<MHR_EF_Code.Models.Entities.Employee>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Employee Code</th>
            <th>Full Name</th>
            <th>Hire Date</th>
            <th>Education</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeCode</td>
                <td>@item.FullName</td>
                <td>@item.HireDate.ToShortDateString()</td>
                <td>@item.Education</td>
                <td>@item.Department?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>