@model MHR_EF_Code.Models.Entities.Payroll

<div class="container mt-4">
    <h4 class="mb-3">Payroll Details</h4>
    <hr />
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 fw-bold text-end">
                    @Html.DisplayNameFor(model => model.TotalSalary)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TotalSalary) VND
                </dd>
                <dt class="col-sm-4 fw-bold text-end">
                    @Html.DisplayNameFor(model => model.PayDate)
                </dt>
                <dd class="col-sm-8">
                    @Model.PayDate?.ToString("dd/MM/yyyy")
                </dd>
                <dt class="col-sm-4 fw-bold text-end">
                    @Html.DisplayNameFor(model => model.Details)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Details)
                </dd>
                <dt class="col-sm-4 fw-bold text-end">
                    @Html.DisplayNameFor(model => model.Employee)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Employee.EmployeeCode)
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
