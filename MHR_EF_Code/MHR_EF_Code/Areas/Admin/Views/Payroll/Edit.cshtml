@model MHR_EF_Code.ViewModels.EmployeeSalaryVM

@{
    ViewBag.Title = "Edit Payroll";
}

<div class="container">
    <form asp-action="Edit" asp-controller="Payroll" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        <!-- Employee Information -->
        <h4 class="mb-3">Employee Information</h4>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label asp-for="Employees.EmployeeCode" class="form-label"></label>
                    <input asp-for="Employees.EmployeeCode" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label asp-for="Employees.FullName" class="form-label"></label>
                    <input asp-for="Employees.FullName" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label asp-for="Employees.Department.Name" class="form-label">Department</label>
                    <input asp-for="Employees.Department.Name" class="form-control" readonly />
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <h4 class="mb-3">Contact Information</h4>
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label asp-for="Contact.ContactType" class="form-label"></label>
                    <input asp-for="Contact.ContactType" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label asp-for="Contact.Description" class="form-label"></label>
                    <textarea asp-for="Contact.Description" class="form-control" readonly></textarea>
                </div>
            </div>
        </div>

        <!-- Salary Information -->
        <h4 class="mb-3">Salary Information</h4>
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="form-group">
                    <label asp-for="Contact.BaseSalary" class="form-label"></label>
                    <input asp-for="Contact.BaseSalary" class="form-control" type="number" step="0.01" readonly />
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-group">
                    <label asp-for="Payroll.PayDate" class="form-label"></label>
                    <input asp-for="Payroll.PayDate" class="form-control" type="date" />
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-group">
                    <label asp-for="Overtime.Hours" class="form-label"></label>
                    <input asp-for="Overtime.Hours" class="form-control" type="number   " />
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-group">
                    <label asp-for="Payroll.TotalSalary" class="form-label"></label>
                    <input asp-for="Payroll.TotalSalary" class="form-control" type="number" step="0.01" />
                </div>
            </div>
        </div>

        <!-- Attendance Information -->
        <h4 class="mb-3">Attendance Information</h4>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label asp-for="Attendance.TotalDaysWorked" class="form-label"></label>
                    <input asp-for="Attendance.TotalDaysWorked" class="form-control" />
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label asp-for="Attendance.StartDate" class="form-label">Start Date</label>
                    <input asp-for="Attendance.StartDate" class="form-control" type="date" />
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-group">
                    <label asp-for="Attendance.EndDate" class="form-label">End Date</label>
                    <input asp-for="Attendance.EndDate" class="form-control" type="date" />
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="row mt-4">
            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a class="btn btn-secondary" asp-action="index"> Get Back</a>
            </div>
        </div>
    </form>
</div>
