@using MHR_EF_Code.HtmlHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="@Url.Content("~/wwwroot/lib/dist/css/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/font-awesome.css")" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="~/css/styleCss.css" rel="stylesheet" />

    <style>
        .material-symbols-outlined {
            justify-content: center;
            font-size: 1.5rem !important;
        }
    </style>
    <script src="~/wwwroot/js/controllUser.js"></script>
</head>
<body>
    <div class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button"> <i class="material-symbols-outlined" id="toggle-icon">toggle_off</i> </button>
                <div class="sidebar-logo">
                    <a href="#" style="font-size: 1rem; color: #9370DB">Zenith Hawking</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    @Html.GenerateSidebarLink("admin/Home", "dashboard", "Dashboard")
                </li>
                <li class="sidebar-item">
                    @Html.GenerateSidebarLink("#", "task", "Task")
                </li>

                <li class="sidebar-item">
                    <a href="#" class="sidebar-link has-dropdown collapsed" data-bs-toggle="collapse" data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                        <i class="material-symbols-outlined">manage_accounts</i>
                        <span>Management</span>
                    </a>

                    <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-controller="Account" asp-action="index" asp-area="Admin" class="sidebar-link">Account</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Employee" asp-action="index" asp-area="Admin" as class="sidebar-link">Employee</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Attendance" asp-action="index" class="sidebar-link">Attendance</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="LeaveRequests" asp-action="index" class="sidebar-link">Time off</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="contacts" asp-action="index" class="sidebar-link">Contract</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="departments" asp-action="index" class="sidebar-link">Department</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="trainings" asp-action="index" class="sidebar-link">Training</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-action="index" asp-controller="payroll" class="sidebar-link">Payroll</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Reports</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link has-dropdown collapsed" data-bs-toggle="collapse" data-bs-target="#multi"
                       aria-expanded="false" aria-controls="multi">
                        <i class="material-symbols-outlined">Dashboard</i>
                        <span>Multi Level</span>
                    </a>
                    <ul id="multi" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse"
                               data-bs-target="#multi-two" aria-expanded="false" aria-controls="multi-two">
                                Two Links
                            </a>
                            <ul id="multi-two" class="sidebar-dropdown list-unstyled collapse">
                                <li class="sidebar-item">
                                    <a href="#" class="sidebar-link">Link 1</a>
                                </li>
                                <li class="sidebar-item">
                                    <a href="#" class="sidebar-link">Link 2</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <i class="material-symbols-outlined">notifications</i>
                        <span>Notification</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <i class="material-symbols-outlined">settings</i>
                        <span>Setting</span>
                    </a>
                </li>

            </ul>
            <div class="sidebar-footer">
            </div>

        </aside>
        <nav class="navbar navbar-expand-sm bg-info" style="background: linear-gradient(-45deg, rgba(0, 128, 255, 1) 0%,rgba(14, 34, 56, 1) 100%); ">
            <img src="~/img/op.png" style="width: 50px; fill: white;" alt="Alternate Text" />
            <a class="navbar-brand" href="/admin/Home/" style="font-size: 23px; color: aqua; margin-left: 10px; font-weight: bold; ">OwlStaff</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item active">
                        <a class="nav-link" aria-current="page" href="/admin/Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Brand</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Category</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Messsages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Support</a>
                    </li>
 
                </ul>

                <!-- Move this ul outside of the previous ul and apply ms-auto to align it to the right -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item" style="margin-right:2px">
                        <form class="d-flex flex-row align-items-center flex-wrap" action="/admin/products/index">
                            @Html.TextBox("Search", ViewBag.search as string, new { @class = "form-control w-auto", placeholder = "search...", area = "Admin" })
                        </form>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="material-symbols-outlined">
                                forum
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="material-symbols-outlined">
                                notifications
                            </span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="material-symbols-outlined" style="width:20px">
                                person
                            </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown" id="userDropdownMenu">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li id="userLogoutForm"> <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item"> <button type="submit" class="btn btn-link" id="logoutButton">Logout</button> </form> </li>
                            }
                            else
                            {
                                <li id="userLoginLink"> <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Login</a> </li>
                            }
                        </ul>
                    </li>

                </ul>
            </div>

        </nav>
        <div class="main m-4" style="">
            <div class="container-fluid" style="margin-top:70px">
                @RenderBody()

                <hr class="divider" />
                <footer class="footer bg-white py-4 mb-2">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <ul class="list-inline mb-0">
                                    <li class="list-inline-item mx-3">
                                        <a href="https://www.facebook.com/thanh.hai.13377/" target="_blank" class="footer-link">
                                            <i class="fab fa-github fa-lg footer-icon"></i> GitHub
                                        </a>
                                    </li>
                                    <li class="list-inline-item mx-3">
                                        <a href="https://github.com/ThanhHai133" target="_blank" class="footer-link">
                                            <i class="fab fa-facebook fa-lg footer-icon"></i> Facebook
                                        </a>
                                    </li>
                                    <li class="list-inline-item mx-3">
                                        <a target="_blank" class="footer-link">
                                            <i class="fas fa-envelope fa-lg footer-icon "></i> Gmail: haitt200456@gmail.com
                                        </a>

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>



        </div>


    </div>



    <!-- Add this line in the <head> section of your HTML -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" crossorigin="anonymous">


    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!--js message box-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/wwwroot/js/confirmDelete.js"></script>

    <script>
        const hamBurger = document.querySelector(".toggle-btn");
           hamBurger.addEventListener("click", function ()
           {
               const sidebar = document.querySelector("#sidebar");
               const icon = document.getElementById('toggle-icon');
               sidebar.classList.toggle("expand");
               if (icon.textContent === 'toggle_off')
               {
                   icon.textContent = 'toggle_on';
                   // Thay đổi thành toggle_on
               }
               else
               {
                   icon.textContent = 'toggle_off';
               } });
    </script>
</body>
</html>
